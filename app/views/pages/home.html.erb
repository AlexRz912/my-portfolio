  </div>
  <div class="d-flex justify-content-center fs-5 fade-in" data-toggle-animation-target="buttonText">
    <p data-action="click->toggle-animation#addKeyframes" class="text-purple text-opacity button-position button-decoration"> See Projects </p>
  </div>
</div>

<div data-controller="word-cloud-upper-div" class="word-cloud">
  <div style="position: absolute; top: 0;pointer-events: none;" class="d-flex justify-content-center align-items-center" data-word-cloud-upper-div-target="cloud">
    <div data-controller="word-cloud">
      <% mock_data_list = @mock_data_list.each_slice(4).to_a %>
      <% mock_data_list.each do |elem| %>
        <div data-word-cloud-target="texts" class="fs-6 titles-bold d-flex">
          <% elem.each do |project| %>
            <p style="margin: 0; margin-right: 70px; opacity: 0;"><%= project.upcase %> </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
